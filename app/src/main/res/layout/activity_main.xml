<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"

        android:text="Your Details!"
        android:textSize="45sp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
       />

    <EditText
        android:id="@+id/Name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="#C0C0C0"
        android:layout_marginBottom="10dp"
        android:background="#282828"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/College1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:background="#282828"
        android:textColorHint="#C0C0C0"
        android:ems="10"
        android:hint="College"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/course1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textColorHint="#C0C0C0"
        android:background="#282828"
        android:ems="10"
        android:hint="Course"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/current_year1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textColorHint="#C0C0C0"
        android:background="#282828"
        android:ems="10"
        android:hint="Current Year"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/roll_number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textColorHint="#C0C0C0"
        android:background="#282828"
        android:ems="10"
        android:hint="Roll Number"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/emailid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="#C0C0C0"
        android:layout_marginBottom="10dp"
        android:background="#282828"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/contactno1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="#C0C0C0"
        android:layout_marginBottom="10dp"
        android:background="#282828"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/pass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="#C0C0C0"
        android:background="#282828"
        android:ems="10"
        android:hint="Change from Google settings !"
        android:layout_marginBottom="50dp"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/update"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="update"
        android:background="@drawable/roundedbutton"
        android:layout_marginLeft="90dp"

        />



</LinearLayout>